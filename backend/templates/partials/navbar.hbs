<script>
    // Get a reference to the login button
const loginBtn = document.getElementById("login-btn");

// Add an event listener for the "mouseover" event
loginBtn.addEventListener("mouseover", function() {
  // Change the background color of the button to blue
  loginBtn.style.backgroundColor = "blue";
});

// Add an event listener for the "mouseout" event
loginBtn.addEventListener("mouseout", function() {
  // Change the background color of the button back to its original color
  loginBtn.style.backgroundColor = "";
});
</script>